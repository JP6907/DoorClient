<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    >
 	
    <include layout="@layout/head_other" android:id="@+id/head"/>
    
    
    <TextView
        android:id="@+id/scan_result_hint"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/head"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        android:textSize="20sp"
        android:text="@string/door_id"/>
    
     <EditText
        android:id="@+id/scan_result"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:enabled="false"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:layout_below="@id/scan_result_hint"
        android:background="@drawable/layout_all_coner"/>
     
      <Button
        android:id="@+id/scan_btn"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_style_white"
        android:text="@string/open_door"/>
</RelativeLayout>