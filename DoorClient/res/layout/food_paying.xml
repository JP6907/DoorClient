<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <com.example.communityfunction.food.FoodTitleLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"      
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="3dp"
            android:layout_marginTop="5dp"
             >
             <TextView 
                 android:id="@+id/pay_food_name"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:gravity="center_vertical"
                 android:layout_alignParentLeft="true"
                 android:paddingLeft="3dp"
                 android:text="北京烤鸭"
                 android:textSize="18sp"
                 />
             <TextView 
                 android:id="@+id/pay_food_price"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:gravity="center_vertical"
                 android:layout_alignParentRight="true"
                 android:paddingRight="3dp"
                 android:textSize="18sp"
                 android:text="79元"
                 />
            
        </RelativeLayout>
        
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginLeft="5dp" 
            android:layout_marginRight="5dp"
             >
            
            <TextView 
                 android:id="@+id/pay_number_left"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:gravity="center_vertical"
                 android:layout_alignParentLeft="true"
                 android:paddingLeft="3dp"
                 android:text="数量： "
                 android:textSize="18sp" />  
         
             <LinearLayout 
                 android:id="@+id/paynumber"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:layout_alignParentRight="true"
                 android:orientation="horizontal"
                 >
                <Button
                    android:id="@+id/minus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    
                    /> 
                    
                <EditText 
                    android:id="@+id/number_edittext"
                    android:layout_width="46dp"
                    android:layout_height="40dp"
                    android:text="1"               
                    android:maxLength="2"
                    android:gravity="center"
                    android:inputType="number"
                    />
              
                <Button
                    android:id="@+id/plus"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"                 
                    /> 
                 
                 
             </LinearLayout>

      
        </RelativeLayout>
        
        <TextureView 
            android:layout_width="match_parent"
            android:layout_height="3dp"
            />
       
        <RelativeLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:layout_marginLeft="5dp" 
            android:layout_marginRight="5dp"
             >
            
            <TextView 
                 android:id="@+id/pay_sum_money_left"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:gravity="center_vertical"
                 android:layout_alignParentLeft="true"
                 android:paddingLeft="3dp"
                 android:text="总价： "
                 android:textSize="18sp" />  
         
            <TextView 
                 android:id="@+id/pay_sum_money_right"
                 android:layout_width="wrap_content"
                 android:layout_height="40dp"
                 android:gravity="center_vertical"
                 android:layout_alignParentRight="true"
                 android:paddingRight="3dp"
                 android:textSize="18sp"
                 android:textColor="#ff0000"
                 android:text="79元"
                 />
      
        </RelativeLayout>
        
        
    </LinearLayout>
 
    <TextView 
        android:layout_width="match_parent"
        android:layout_height="20dp"
        />
  
    <Button
        android:id="@+id/commit_order"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="提交订单"
        android:gravity="center"
        android:layout_marginRight="5dp"
        android:layout_marginLeft="5dp"  
        android:background="@color/theme_color"    
        />

</LinearLayout>